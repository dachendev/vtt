{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "outDir": "./dist",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}

